CREATE PROPERTY GRAPH paysim
  VERTEX TABLES (
    customer
      LABEL "Customer"
      PROPERTIES (
        name AS "name"
      )
  )
  EDGE TABLES (
    paysim
      SOURCE KEY(name_orig) REFERENCES customer
      DESTINATION KEY(name_dest) REFERENCES customer
      LABEL "transfer"
      PROPERTIES (
        amount AS "amount"
      , step AS "step"
      )
  )
